<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.learningmanagementsystem.StudentAssignmentDetailsController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label fx:id="descriptionLabel" wrapText="true"/>
    <Label fx:id="dueDateLabel"/>

    <TextArea fx:id="answerTextArea" promptText="Write your answer..." prefHeight="150"/>
    <Label fx:id="fileLabel" text="No file selected"/>

    <Button text="Upload File" onAction="#handleUploadFile"/>
    <Button text="Submit Assignment" onAction="#handleSubmit"/>
</VBox>