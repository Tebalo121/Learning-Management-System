<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="281.0" prefWidth="361.0" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.learningmanagementsystem.AdminSystemSettingsController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="System Settings" />

    <Separator />

    <VBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 16px; -fx-underline: true;" text="Preferences" />
        <CheckBox fx:id="announcementCheckBox" text="Enable Announcements" />
        <CheckBox fx:id="registrationCheckBox" text="Allow Registrations" />
    </VBox>

    <Separator />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-font-size: 14px; -fx-padding: 8 16;" text="Back" />
    </HBox>
</VBox>