<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="449.0" prefWidth="605.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.learningmanagementsystem.StudentAssignmentDetailsController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <Label fx:id="descriptionLabel" wrapText="true" />
    <Label fx:id="dueDateLabel" />

    <TextArea fx:id="answerTextArea" prefHeight="150" promptText="Write your answer..." />
    <Label fx:id="fileLabel" text="No file selected" />

    <Button onAction="#handleUploadFile" text="Upload File" />
    <Button onAction="#handleSubmit" text="Submit Assignment" />
</VBox>
