<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="323.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.learningmanagementsystem.AdminHomeController">
    <top>
        <ToolBar>
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Welcome Admin" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" text="Logout" style="-fx-font-size: 14; -fx-padding: 5;" />
        </ToolBar>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 22;" text="Admin Dashboard" />
                <Button onAction="#handleManageUsers" text="Manage Users" style="-fx-font-size: 14; -fx-padding: 10;" />
                <Button onAction="#handleViewCourses" text="View All Courses" style="-fx-font-size: 14; -fx-padding: 10;" />
                <Button onAction="#handleViewReports" text="Generate Reports" style="-fx-font-size: 14; -fx-padding: 10;" />
                <Button onAction="#handleManageEnrollments" text="Manage Enrollments" style="-fx-font-size: 14; -fx-padding: 10;" />
                <Button onAction="#handleSystemAnalytics" text="System Analytics" style="-fx-font-size: 14; -fx-padding: 10;" />
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>