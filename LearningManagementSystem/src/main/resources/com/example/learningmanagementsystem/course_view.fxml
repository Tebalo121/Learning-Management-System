<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.learningmanagementsystem.CourseViewController" spacing="15" alignment="CENTER" prefWidth="600">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Course Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Course Name:" style="-fx-font-weight: bold;"/>
    <Text fx:id="courseNameText" style="-fx-font-size: 14px;"/>

    <Label text="Description:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="descriptionTextArea" editable="false" wrapText="true" prefHeight="150" prefWidth="500" style="-fx-font-size: 14px;"/>

    <Button fx:id="backButton" text="Back to Manage Courses" onAction="#handleBack" style="-fx-font-weight: bold;"/>
</VBox>